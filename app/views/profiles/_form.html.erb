<%= form_for @profile, :html => {:multipart => true}  do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="box-body">
    <div class="form-group">
      <%= f.label :full_name %><br>
      <%= f.text_field :full_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :skills %><br>
      <%= f.text_field :skills, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :about %><br>
      <%= f.text_field :about, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image_url, "Upload Image" %><br>
      <%= f.file_field :image_url, class: "filestyle", :"data-buttonBefore" => "true" %>
    </div>
  </div>
  <div class="box-footer">
    <div class="actions">
      <%= f.submit 'Submit', class: "btn btn-primary btn-info" %>
      <%= link_to 'Cancel', root_path, class: "btn btn-danger" %>
    </div>
  </div>


<% end %>
