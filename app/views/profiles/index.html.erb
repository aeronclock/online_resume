<div class="container">
  <h1>Your Profile</h1>
  <hr/>

  <% if @profile.present? %>
    <ul>
      <% if @profile.image_url.present? %>
        <%= image_tag(@profile.image_url.url, size: "100") %>
      <% end %>
      <li>
        <label>Name</label>:
        <%= @profile.full_name %>
      </li>
      <li>
        <label>skills</label>:
        <%= @profile.skills %>
      </li>
      <li>
        <label>About</label>:
        <%= @profile.about %>
      </li>
    </ul>
  <% end %>

  <%= link_to "New Profile", new_profile_path(@profile) if @profiles.count == 0 %>
  <%= link_to "Edit Profile", edit_profile_path(@profile) if @profile.present? %>
</div>
